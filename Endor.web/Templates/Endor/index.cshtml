@model Endor.Models.Articles
@{
    ViewBag.Title = "index";    
}

<section id="articles">
    @foreach (Endor.Models.Article article in Model)
    {         
    <article class="post">
      <header>
        <h1><a href="@article.Path()">@article.Title()</a></h1>
        <span class="date">@article.Date()</span>
      </header>

      <section class="content">
        @Html.Raw(@article.Summary())     
      </section>
      <div class="more"><a href="#">read on &raquo;</a></div>
    </article>  
    }
</section>

<section id="archives">
  <h1></h1>
</section>

